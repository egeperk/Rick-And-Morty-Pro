<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.search.SearchFragment"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector_arrow"
            android:rotation="180" />

        <TextView
            style="@style/Typography.Bold.Body.20"
            android:id="@+id/favorites_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:paddingVertical="14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/search" />

        <EditText
            android:id="@+id/search_bar"
            android:drawableEnd="@drawable/ic_baseline_clear_24"
            android:maxLines="1"
            android:singleLine="true"
            android:drawablePadding="16dp"
            android:hint="@string/search"
            android:textColorHint="@color/hint_gray"
            android:drawableStart="@drawable/ic_search"
            android:background="@drawable/selector_edit_text"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/favorites_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingVertical="2dp"
            android:id="@+id/item_header"
            style="@style/Typography.Bold.Body.20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_bar"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            tools:text="Characters"/>

        <TextView
            android:id="@+id/character_count"
            style="@style/Typography.Bold.Body.16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/custom_count_bg"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toBottomOf="@id/search_bar"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@id/item_header"
            tools:text="80" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_header"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:orientation="vertical"
            tools:listitem="@layout/character_row"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>