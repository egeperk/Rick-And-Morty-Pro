<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Typography">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="elevation">0dp</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="Typography.Regular" parent="Typography">
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="Typography.Medium" parent="Typography">
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="Typography.Bold" parent="Typography">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Typography.Bold.Large.Title" parent="Typography.Bold">
        <item name="android:textSize">32sp</item>
        <item name="lineHeight">41dp</item>
        <item name="android:spacing">0.4dp</item>
    </style>

    <style name="Typography.Medium.Tagline.13" parent="Typography.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">18dp</item>
        <item name="android:spacing">-0.1dp</item>
    </style>

    <style name="Typography.Medium.Tagline.15" parent="Typography.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">18dp</item>
        <item name="android:spacing">-0.1dp</item>
    </style>

    <style name="Typography.Bold.Headline.2" parent="Typography.Bold">
        <item name="android:textSize">28sp</item>
        <item name="lineHeight">34dp</item>
        <item name="android:spacing">0.34dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Typography.Bold.Headline.3" parent="Typography.Bold">
        <item name="android:textSize">22sp</item>
        <item name="lineHeight">28dp</item>
        <item name="android:spacing">0.35dp</item>
    </style>

    <style name="Typography.Regular.Body.15" parent="Typography.Regular">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="Typography.Medium.Tagline.11" parent="Typography.Medium">
        <item name="android:textSize">11sp</item>
        <item name="lineHeight">13dp</item>
    </style>

    <style name="Typography.Medium.Headline.6" parent="Typography.Medium">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:spacing">0.15dp</item>
    </style>

    <style name="Typography.Regular.16" parent="Typography.Regular">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20dp</item>
        <item name="android:spacing">0.15dp</item>
    </style>

    <style name="Typography.Regular.14" parent="Typography.Regular">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">17dp</item>
        <item name="android:spacing">0.25dp</item>
    </style>

    <style name="Typography.Regular.Body.17" parent="Typography.Regular">
        <item name="android:textSize">17sp</item>
        <item name="lineHeight">22dp</item>
        <item name="android:spacing">-0.4dp</item>

    </style>

    <style name="Typography.Bold.Body.16" parent="Typography.Bold">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">19dp</item>
        <item name="android:spacing">-0.4dp</item>

    </style>

    <style name="Typography.Regular.Body.20" parent="Typography.Regular">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">25dp</item>
        <item name="android:spacing">0.4dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Typography.Regular.Caption.11" parent="Typography.Regular">
        <item name="android:textSize">11sp</item>
        <item name="lineHeight">13dp</item>
        <item name="android:spacing">0.1dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Typography.Regular.Caption.13" parent="Typography.Regular">
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">18dp</item>
        <item name="android:spacing">-0.1dp</item>
    </style>

    <style name="Typography.Medium.Body.15" parent="Typography.Medium">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="Typography.Bold.Body.20" parent="Typography.Bold">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:spacing">0.4dp</item>
    </style>

    <style name="Typography.Bold.Headline.1" parent="Typography.Bold">
        <item name="android:textSize">40sp</item>
        <item name="lineHeight">48dp</item>
        <item name="android:spacing">0.4dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Typography.Regular.Caption.10" parent="Typography.Regular">
        <item name="android:textSize">10sp</item>
        <item name="lineHeight">13dp</item>
        <item name="android:spacing">0.1dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>